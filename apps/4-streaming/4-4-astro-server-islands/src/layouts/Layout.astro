---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Server Islands</title>
  </head>
  <body class="flex flex-col h-screen">
    <!-- Header -->
    <header
      class="flex items-center h-16 px-4 bg-white text-gray-800 border-b border-gray-200 min-h-16"
    >
      <div class="flex items-center gap-4">
        <button class="text-gray-800 focus:outline-none">
          <!-- Burger icon can be an SVG or a simple div with styling -->
          <div class="w-6 h-0.5 bg-gray-800 mb-1"></div>
          <div class="w-6 h-0.5 bg-gray-800 mb-1"></div>
          <div class="w-6 h-0.5 bg-gray-800"></div>
        </button>
        <span>Astro Server Islands</span>
      </div>
    </header>

    <!-- Main Content Area -->
    <div class="flex flex-1">
      <!-- Sidebar / Navbar -->
      <nav class="w-48 bg-gray-100 p-4">
        <ul>
          <li>
            <a
              href="/"
              class="block py-2 text-blue-500 hover:text-blue-700 hover:underline"
              >Home Feed</a
            >
          </li>
          <li>
            <a
              href="/users"
              class="block py-2 text-teal-500 hover:text-teal-700 hover:underline"
              >Users</a
            >
          </li>
        </ul>
      </nav>

      <!-- Main Content -->
      <main class="flex-1 p-4 max-w-[1400px] mx-auto mb-32">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
